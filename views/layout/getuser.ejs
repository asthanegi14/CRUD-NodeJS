<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="container my-3">
        <h1 class="heading text-center my-4">Users data</h1>
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if(users
                   !=''
                   ){%>

                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th scope="col">Id</th>
                                <th scope="col">Name </th>
                                <th scope="col">Colors</th>
                                <th scope="col">Price</th>
                                <th scope="col">Types</th>
                                <th scope="col">Image</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((item,
                               idx)=> {%>
                                <tr>
                                    <th scope="row">
                                        <%= idx
                                            %>
                                    </th>
                                    <td>
                                        <%= item.name
                                            %>
                                    </td>
                                    <td>
                                        <%= item.colors
                                            %>
                                    </td>
                                    <td>
                                        <%= item.pricePerGram
                                            %>
                                    </td>
                                    <td>
                                        <%= item.applicationTypes
                                            %>
                                    </td>
                                    <td><img src="<%= item.image %>"
                                             alt="image"
                                             width="50"
                                             class="img-thumbnail"></td>
                                    <td>
                                        <a href="/update/<%= item._id %>"
                                           class="text-sucess"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= item._id %>"
                                           class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                                <%}) %>
                        </tbody>
                    </table>
                    <%}else{%>
                        <h1 class="textcenter text-secondary mt-5">No users found in the database</h1>
                        <%} %>

            </div>
        </div>
    </div>
</body>

</html>